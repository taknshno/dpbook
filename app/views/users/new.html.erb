<% content_for(:title, 'DPbook') %>
<div class="signup-wrapper">
  <div class="form-box">
    <div class="signup-form">
      <div class="signup-title">
        <h2>アカウント作成</h2>
        <span>以下の情報を入力してください。</span>
      </div>
      <div class="form-border"></div>
      <div class="signup-input">
        <%= form_with(model: @user, local: true) do |f| %>
          <div class="input-group-lg input-container">
            <%= f.text_field :name, placeholder:"名前", class:"form-control form-control-lg"  %>
          </div>
          <div class="input-group-lg input-container">
            <%= f.email_field :email, placeholder:"メールアドレス", class:"form-control form-control-lg"  %>
          </div>
          <div class="input-group-lg input-container">
            <%= f.password_field :password, placeholder:"パスワード", class:"form-control form-control-lg"  %>
          </div>
          <div class="input-group-lg input-container">
            <%= f.password_field :password_confirmation, placeholder:"パスワード(再確認)", class:"form-control form-control-lg"  %>
          </div>
        </div>
        <div class="button-container">
          <%= f.submit "アカウント作成", class:"btn btn-success btn-lg w-50" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
