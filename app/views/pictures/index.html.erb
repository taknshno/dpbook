<h1>投稿一覧</h1>

<table>
  <tr>
    <th>写真</th>
    <th>コメント</th>
  </tr>

<% @pictures.each do |picture| %>
  <tr>
    <td><%= image_tag picture.image.url %></td>
    <td><%= picture.content %></td>
    <td>[<%= link_to '詳細', picture_path(picture.id) %>]</td>
    <td>[<%= link_to "編集", edit_picture_path(picture.id), data: { confirm: '本当に編集しますか' } %>]</td>
    <td>[<%= link_to '削除', picture_path(picture.id), method: :delete, data: { confirm: '本当に削除しますか' } %>]</td>
  </tr>
<% end %>
</table>

<p><%= link_to '写真を投稿する', new_picture_path %></p>