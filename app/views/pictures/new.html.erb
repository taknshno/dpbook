<div class="post-wrapper">

    <div class="d-flex justify-content-center flex-wrap" style="gap: 20px;">
        <div>
          <div class="img-preview" id="prv"></div>
        </div>
        <div>
          <div class="post-form">
            <div class="input-container post-title">
              <h4>新規投稿</h4>
            </div>
            <%= form_with(model: @picture, local: true ,url: choose_new_or_edit ) do |form| %>
              <div class="input-container">
                <%= form.file_field :image %>
                <%= form.hidden_field :image_cache %>
              </div>
              <div class="input-container">
                <%= form.text_area :content, placeholder:"コメントを入力", class:"form-control form-control-lg"  %>
              </div>
              <div class="button-container">
                  <%= form.submit "投稿する", class:"btn btn-primary btn-lg w-100" %>
              </div>
            <% end %>
          </div>
        </div>
      
    </div>

</div>